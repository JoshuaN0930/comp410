isWarm(pizza).
isWarm(burgers).
isWarm(burrito).


likes(alice,pizza).
likes(alice,burgers).
likes(alice,burritos).
likes(alice,yogurt).
likes(bob,pizza).
likes(bob,salad).
likes(bob,burgers).
likes(bob,milk).
likes(bill, Food) :-
    isWarm(Food).
likes(janet,Food) :-
    likes(alice,Food),
    likes(bob, Food).

likes(mel,Food) :-
    likes(janet,Food).
likes(mel,yogurt).
